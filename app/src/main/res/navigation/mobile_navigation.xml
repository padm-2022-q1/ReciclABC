<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_recycling_guide">

    <fragment
        android:id="@+id/navigation_recycling_guide"
        android:name="br.edu.ufabc.reciclabc.ui.recyclingguide.RecyclingGuideFragment"
        android:label="@string/title_recycling_guide"
        tools:layout="@layout/fragment_recycling_guide" />

    <fragment
        android:id="@+id/navigation_collection_points"
        android:name="br.edu.ufabc.reciclabc.ui.collectionpoints.CollectionPointsFragment"
        android:label="@string/title_collection_points"
        tools:layout="@layout/fragment_collection_points" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="br.edu.ufabc.reciclabc.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications">
        <action
            android:id="@+id/create_address_notification_action"
            app:destination="@id/create_address_notification_fragment" />
    </fragment>

    <fragment
        android:id="@+id/create_address_notification_fragment"
        android:name="br.edu.ufabc.reciclabc.ui.notifications.CreateAddressNotificationFragment"
        android:label="@string/appbar_title_create_notification"
        tools:layout="@layout/fragment_create_address_notification">
        <argument
            android:name="addressNotification"
            android:defaultValue="@null"
            app:argType="br.edu.ufabc.reciclabc.model.AddressNotification"
            app:nullable="true" />
        <action
            android:id="@+id/create_notification_action"
            app:destination="@id/create_notification_fragment" />
    </fragment>

    <fragment
        android:id="@+id/create_notification_fragment"
        android:name="br.edu.ufabc.reciclabc.ui.notifications.CreateNotificationFragment"
        android:label="@string/appbar_title_create_notification"
        tools:layout="@layout/fragment_create_address_notification">
        <argument
            android:name="notification"
            android:defaultValue="@null"
            app:argType="br.edu.ufabc.reciclabc.model.Notification"
            app:nullable="true" />
    </fragment>
</navigation>